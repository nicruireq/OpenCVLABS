{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cpp compilar archivo activo",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-Wl,--copy-dt-needed-entries",
				"-I",
				"/usr/include/opencv4",
				"-L",
				"/usr/lib",
				"-lopencv_core",
				"-lopencv_videoio",
				"-lopencv_imgproc",
				"-lopencv_highgui"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compilador: /usr/bin/cpp"
		}
	]
}